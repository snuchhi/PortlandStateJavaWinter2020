<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="false"
    android:layout_centerHorizontal="false"
    android:layout_centerVertical="false"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_anchorGravity="center">

    <Button
        android:id="@+id/add_flights"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:includeFontPadding="true"
        android:onClick="onAddFlightClick"
        android:shadowColor="#54A7EA"
        android:text="@string/add_flights"
        android:textColor="#5003D8"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/search_flights"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:includeFontPadding="true"
        android:onClick="onSearchFlightClick"
        android:shadowColor="#54A7EA"
        android:text="@string/search_flights_for_an_airline"
        android:textColor="#5003D8"
        android:textStyle="bold|italic" />

</LinearLayout>